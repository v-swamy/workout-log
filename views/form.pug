form(action=path method="post")
  .field 
    label.label(for="date") Date 
    .control 
      input.input(type="text" id="date" name="date" placeholder="mm/dd/yyyy" value=date)
    p.help MM/DD/YYYY
  .field 
    label.label(for="exercise") Exercise 
    .control
      .select
        select(name="exercise" id="exercise" value=exercise)
          option(value="Squat") Squat
          option(value="Deadlift") Deadlift 
          option(value="Shoulder Press") Shoulder Press 
          option(value="Bench Press") Bench Press 
          option(value="Power Clean") Power Clean 
          option(value="Chin-Ups") Chin-Ups
  .field 
    label.label(for="weight") Weight 
    .control 
      input.input(type="text" name="weight" id="weight" value=weight)
  .field 
    label.label(for="sets") Sets 
    .control 
      input.input(type="text" name="sets" id="sets" value=sets)
  .field 
    label.label(for="reps") Reps 
    .control 
      input.input(type="text" name="reps" id="reps" value=reps)
  .field
    .control 
      button.button.is-primary Save

